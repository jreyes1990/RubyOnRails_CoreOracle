<!-- Inicio Iconos Font-Awesomes -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-md-6 text-left">
        <h6 class="m-0 font-weight-bold text-primary">Gestión de Icono FontAwesome</h6>
      </div>
      <div class="col-md-6 text-right">
        <!--< if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>-->
          <%= link_to new_font_awesom_path, class: "btn btn-success btn-sm" do %>
            <span class="icon text-green-50">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">AGREGAR</span>
          <%end%>
        <!--< end %>-->
        <!--< if tiene_permiso("BOTON CARGA MASIVA", "VER") %>-->
        <%= link_to carga_masiva_awesome_path, class: "btn btn-warning btn-sm" do %>
            <span class="icon text-red-50">
                <i class="fas fa-upload"></i>
            </span>
          <span class="text">CARGA</span>
        <% end %>
        <!--< end %>-->
        <%= link_to root_path, class: "btn btn-danger btn-sm" do %>
          <span class="icon text-red-50">
              <i class="fas fa-home"></i>
          </span>
          <span class="text">INICIO</span>
        <%end%>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-12 table-responsive">
          <table id="datatable" class="table table-striped table-hover table-sm table-responsive-sm table-bordered" cellspacing="0" style="width:100%">
            <thead class="text-white">
              <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Icono</th>
                <th>Prefijo</th>
                <th class="text-center">Código CSS</th>
                <th class="text-center">Tipo</th>
                <th>Termino</th>
                <th class="text-center">Estado</th>
                <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") ||
                  tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                <th class="text-center">Opciones</th>
                <!--< end %>-->
              </tr>
            </thead>

            <tbody>
              <% @font_awesomes.each do |font_awesom| %>
                <tr>
                  <td class="text-center"><%= font_awesom.id %></td>
                  <td class="text-center"><i class="<%= font_awesom.icono %>" aria-hidden="true"></i></td>
                  <td><%= font_awesom.prefijo_nombre %></td>
                  <td class="text-center"><%= font_awesom.codigo_css %></td>
                  <td class="text-center"><%= font_awesom.tipo_icono %></td>
                  <td><%= font_awesom.termino %></td>
                  <td class="text-center"><%= font_awesom.estado %></td>
                  <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") ||
                    tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                  <td class="text-center">
                    <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") %>-->
                    <% if font_awesom.estado == 'A' %>
                      <%= link_to edit_font_awesom_path(font_awesom), class: "btn btn-outline-info btn-sm rounded-circle" do %>
                        <i class="fas fa-edit"></i>
                      <%end%>
                    <% end %>
                    <!--< end %>-->
                    <!--< if tiene_permiso("BOTON INACTIVAR REGISTRO", "VER") %>-->
                    <% if font_awesom.estado != 'A' %>
                      <%= link_to font_awesom_path(font_awesom.id), class: "btn btn-outline-danger btn-sm rounded-circle", method: :delete, data: {controller: 'sweetalert', action: 'click->sweetalert#btnInactivar',
                                                                                                                                            sweetalert_confirm_alert_value: "Eliminar",
                                                                                                                                            sweetalert_cancel_alert_value: "Cancelado",
                                                                                                                                            sweetalert_confirm_title_value: 'Esta seguro de eliminar el icono <i class="'+"#{font_awesom.icono}"+'"</i>',
                                                                                                                                            sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, Eliminar</strong>',
                                                                                                                                            sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                                                                            sweetalert_cancel_title_value: "Se ha cancelado la eliminación de #{font_awesom.icono}"} do %>
                        <i class="fas fa-trash-alt"></i>
                      <% end %>
                    <% end %>
                    <!--< end %>-->  
                    <!--< if tiene_permiso("BOTON INACTIVAR REGISTRO", "VER") %>-->
                    <% if font_awesom.estado == 'A' %>
                      <%= link_to  inactivar_awesome_path(:id => font_awesom.id), class: "btn btn-outline-danger btn-sm rounded-circle", data: {controller: 'sweetalert', action: 'click->sweetalert#btnInactivar',
                                                                                                                                          sweetalert_confirm_alert_value: "Inactivar",
                                                                                                                                          sweetalert_cancel_alert_value: "Cancelado",
                                                                                                                                          sweetalert_confirm_title_value: 'Esta seguro de inactivar el icono <i class="'+"#{font_awesom.icono}"+'"</i>',
                                                                                                                                          sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, Inactivar</strong>',
                                                                                                                                          sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                                                                          sweetalert_cancel_title_value: "Se ha cancelado la inactivación de #{font_awesom.icono}" } do %>
                        <i class="fas fa-toggle-on" style="transform: rotate(360deg);"></i>
                      <%end%>
                    <% else %>
                      <%= link_to  activar_awesome_path(:id => font_awesom.id), class: "btn btn-outline-success btn-sm rounded-circle", data: {controller: 'sweetalert', action: 'click->sweetalert#btnInactivar',
                                                                                                                                  sweetalert_confirm_alert_value: "Activar",
                                                                                                                                  sweetalert_cancel_alert_value: "Cancelado",
                                                                                                                                  sweetalert_confirm_title_value: 'Esta seguro de activar el icono <i class="'+"#{font_awesom.icono}"+'"</i>',
                                                                                                                                  sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, Activar</strong>',
                                                                                                                                  sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                                                                  sweetalert_cancel_title_value: "Se ha cancelado la inactivación de #{font_awesom.icono}" } do %>
                        <i class="fas fa-toggle-on" style="transform: rotate(180deg);"></i>
                      <%end%>
                    <% end %>
                    <!--< end %>-->
                  </td>
                  <!--< end %>-->
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>