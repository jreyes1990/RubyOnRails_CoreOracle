
<%= simple_form_for(@persona_empresa_formulario) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :descripcion %>
    <%= f.input :user_created_id %>
    <%= f.input :user_updated_id %>
    <%= f.input :estado %>
    <%= f.association :personas_area %>
    <%= f.association :opcion_ca %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
