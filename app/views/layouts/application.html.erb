<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>CoreRails</title>
  <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <%= action_cable_meta_tag %>

        <%= stylesheet_link_tag 'application' , media: 'all' , 'data-turbolinks-track' : 'reload' %>
          <%= javascript_pack_tag 'application' , 'data-turbolinks-track' : 'reload' %>
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%= render partial: "layouts/template/sidebar" %>
      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <%= render partial: "layouts/template/topbar" %>
            <!-- Container Fluid -->
            <div class="container-fluid">
              <%= yield %>
                <%= render partial: "layouts/template/card_body" %>
            </div>
            <!-- End of container-fluid -->
        </div>
        <!-- End of Main Content -->
        <%= render partial: "layouts/template/footer" %>
      </div>
      <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->
  <%= render partial: "layouts/template/scroll" %>
    <%= render partial: "layouts/template/modal/logout" %>
</body>

</html>