<!-- Nav Item - User Information -->
<li class="nav-item dropdown no-arrow">
  <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <div style="size: 10px;">
      <font size="2"  color="grey"><%= "#{current_user_name.capitalize} / " "#{current_nombre_area_controller.capitalize}"%></font>
      <br>
      <font size="2" color="grey"><%= current_nombre_area_empresa_controller %></font>
    </div>
    <%  if current_user.persona.foto.present?
          @foto_persona = current_user.persona.foto
        else
          @foto_persona = "https://avatars.githubusercontent.com/u/97012106?v=4"
        end %>
    <!--<span class="mr-2 d-none d-lg-inline text-gray-600 small"><= current_user_name.capitalize %></span>-->
    <img class="img-profile rounded-circle" src="<%= @foto_persona %>">
  </a>
  <!-- Dropdown - User Information -->
  <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
    <%= link_to ver_perfil_path(current_user.persona), class: "dropdown-item" do %>
      <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-800"></i>
      Perfil
    <%end%> 

    <%= link_to mostrar_parametro_path(id: current_user.id), class: "dropdown-item" do %>
      <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-800"></i>
      Parámetro
    <%end%> 

    <a class="dropdown-item" href="#">
      <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
      Activity Log
    </a>
    <div class="dropdown-divider"></div>
    <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item", data: {controller: 'sweetalert', action: 'click->sweetalert#btnConfirmar',
                                                                                           sweetalert_confirm_alert_value: "¿Desea Cerrar Sesión?",
                                                                                           sweetalert_cancel_alert_value: "Cancelado",
                                                                                           sweetalert_confirm_title_value: 'Seleccione <strong>Cerrar sesión</strong>, a continuación si está listo para finalizar su sesión actual.',
                                                                                           sweetalert_confirm_btn_value: '<i class="fas fa-sign-out-alt"></i> <strong>Cerrar Sesión</strong>',
                                                                                           sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>Cancelar</strong>',
                                                                                           sweetalert_cancel_title_value: 'Se ha cancelado el evento <strong>Cerrar sesión</strong>' } do %>
      <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-800"></i>
      <span class="text">Cerrar Sesión</span>
    <% end %>
  </div>
</li>
<!-- End of Nav Item - User Information -->