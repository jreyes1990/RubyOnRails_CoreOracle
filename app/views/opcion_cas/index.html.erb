<!-- Inicio Permiso Formularios -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión de Permiso Formularios</h6>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-12 table-responsive-sm text-right">
        <!--< if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>-->
          <%= link_to new_opcion_ca_path, class: "btn btn-success btn-sm" do %>
            <span class="icon text-green-50">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">AGREGAR</span>
          <% end %>
        <!--< end %>-->
        <%= link_to root_path, class: "btn btn-danger btn-sm" do %>
          <span class="icon text-red-50">
              <i class="fas fa-home"></i>
          </span>
          <span class="text">INICIO</span>
        <% end %>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-12 table-responsive-sm">
        <table id="datatable_opcion_ca_ajax" class="table table-striped table-hover table-sm table-bordered cell-border" cellspacing="0" style="width:100%" data-source="<%= opcion_cas_path(format: :json) %>">
          <thead class="text-white">
            <tr>
              <th>ID</th>
              <th>Menú</th>
              <th>Opcion</th>
              <th>
                <div>Componente</div>
                <div></div>
              </th>
              <th>
                <div>Atributo</div>
                <div></div>
              </th>
              <th>Descripcion</th>
              <th>Estado</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
          </thead>

          <tbody>
            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
