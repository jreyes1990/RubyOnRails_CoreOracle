<!-- Inicio Empresas -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-md-6 text-left">
        <h6 class="m-0 font-weight-bold text-primary">Gestión de Menú-Roles</h6>
      </div>
      <div class="col-md-6 text-right">
        <!--< if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>-->
          <%= link_to new_menu_rol_path, class: "btn btn-success btn-sm" do %>
            <span class="icon text-green-50">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">AGREGAR</span>
          <%end%>
        <!--< end %>-->
        <%= link_to root_path, class: "btn btn-danger btn-sm" do %>
          <span class="icon text-red-50">
              <i class="fas fa-home"></i>
          </span>
          <span class="text">INICIO</span>
        <%end%>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-12 table-responsive">
          <table id="menu-rol-datatable" class="table table-striped table-hover table-sm table-responsive-sm table-bordered" cellspacing="0" style="width:100%" data-source="<%= menu_roles_path(format: :json) %>">
            <thead class="text-white">
              <tr>
                <th>ID</th>
                <th>Rol</th>
                <th>Menu</th>
                <th>Opcion</th>
                <th>Estado</th>
                <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") ||
                tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
                <th class="text-center"></th>
                <!--< end %>-->
                <!--< if tiene_permiso("BOTON ACTIVAR/INACTIVAR REGISTRO", "VER") %>-->
                <th class="text-center"></th>
                <!--< end %>-->
              </tr>
            </thead>

            <tbody>
              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
