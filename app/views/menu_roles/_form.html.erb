<!-- Inicio Menú-Rol -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión de Menú-Rol</h6>
  </div>
  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <%= simple_form_for(@menu_rol) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <div class="row">
                <div class="col-md-4"><%= f.label "Menú" %><%= collection_select(:menu, :menu_id, Menu.joins("inner join opciones on(menus.id=opciones.menu_id)").where(estado: 'A').distinct.order(id: :DESC), :id, :nombre,  {:prompt => "Seleccione un Menú"}, {:class => "select2", :required => false, id: 'codigo_menu'}) %></div>
                <div class="col-md-4"><%= f.label :opcion %><%= f.grouped_collection_select(:opcion_id, Menu.where(estado: 'A').order(:nombre).limit(5), :opciones, :nombre, :id, :nombre, {prompt: "Seleccione una Opción" }, {class: "select2", required: true, id: "codigo_opcion"}) %></div>
                <div class="col-md-4"><%= f.association :rol, collection: Rol.where(estado: 'A'),value_method: :id, label_method: :nombre,  label: "Rol", include_blank: "Seleccione un rol", input_html: { class: "select2", id: 'rol_id', required: true } %></div>
              </div>              
            </div>
            <br>

            <div class="row">
              <div class="col-md-12 text-center">
                <!--< if tiene_permiso("BOTON REGISTRAR", "VER") %>-->
                  <%= button_tag f.submit, class: "btn btn-success btn-sm", data: {controller: 'sweetalert', action: 'click->sweetalert#btnConfirmar',
                                                                                    sweetalert_confirm_alert_value: "#{titulo_menu_rol}",
                                                                                    sweetalert_cancel_alert_value: "Cancelado",
                                                                                    sweetalert_confirm_title_value: 'Esta seguro de <strong>'+"#{titulo_menu_rol.upcase} Menú-Rol?"+'</strong>',
                                                                                    sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, '+"#{titulo_menu_rol}"+'</strong>',
                                                                                    sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                    sweetalert_cancel_title_value: 'Se ha cancelado el evento <strong>'+"#{titulo_menu_rol.upcase} Menú-Rol"+'</strong>' } do %>
                    <span class="icon text-green-50">
                      <i class="fas fa-edit"></i>
                    </span>
                    <span class="text"><%= titulo_menu_rol.upcase %></span>
                  <%end%>
                <!--< end %>-->
                <%= link_to menu_roles_path, class: "btn btn-danger btn-sm" do %>
                  <span class="icon text-red-50">
                    <i class="fas fa-arrow-circle-left"></i>
                  </span>
                  <span class="text">CANCELAR</span>
                <%end%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="opciones" data-endpoint="<%= search_menu_opcion_path %>"></div>
<script>
  $('#codigo_menu').on('select2:select', function (e) {
    $.ajax({
      url: $('.opciones').data('endpoint'),
      type: 'GET',
      dataType: "json",
      data: {
          opcion_id_param: e.params.data.id
      },
      success: function (data) {
        $("#codigo_opcion").empty();

        var json = data;
        $("#codigo_opcion").append("<option value='" + 0 + "'>Seleccione una Opción</option>");
        for (var i of json) {
          $("#codigo_opcion").append("<option value='" + i.opcion_id + "'>" + i.descripcion + "</option>");
          console.log(`Mostrando valores ${i.opcion_id}`)
        }
      }
    });
  });

</script>
