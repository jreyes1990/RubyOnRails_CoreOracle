<!-- Inicio Iconos Font-Awesomes -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gesti√≥n de Icono FontAwesome</h6>
  </div>
  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <%= simple_form_for(@codigo_color) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <div class="row">
                <div class="col-md-4"><%= f.input :disenio %></div>
                <div class="col-md-4"><%= f.input :nombre_color, required: true %></div>
                <div class="col-md-4"><%= f.input :colores, required: true %></div>
              </div>
              <div class="row">
                <div class="col-md-4"><%= f.input :codigo_hex, label: 'HEX', required: true %></div>
                <div class="col-md-4"><%= f.input :codigo_rgb, label: 'RGB', required: true %></div>
                <div class="col-md-4"><%= f.input :codigo_hls, label: 'HLS', required: true %></div>
              </div>
            </div>
            <br>

            <div class="row">
              <div class="col-md-12 text-center">
                <!--< if tiene_permiso("BOTON REGISTRAR", "VER") %>-->
                  <%= button_tag f.submit, class: "btn btn-success btn-sm", data: {controller: 'sweetalert', action: 'click->sweetalert#btnConfirmar',
                                                                            sweetalert_confirm_alert_value: "#{titulo_color}",
                                                                            sweetalert_cancel_alert_value: "Cancelado",
                                                                            sweetalert_confirm_title_value: 'Esta seguro de <strong>'+"#{titulo_color.upcase} #{@codigo_color.colores}?"+'</strong>',
                                                                            sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, '+"#{titulo_color}"+'</strong>',
                                                                            sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                            sweetalert_cancel_title_value: 'Se ha cancelado el evento <strong>'+"#{titulo_color.upcase} #{@codigo_color.colores}"+'</strong>' } do %>
                    <span class="icon text-green-50">
                      <i class="fas fa-edit"></i>
                    </span>
                    <span class="text"><%= titulo_color.upcase %></span>
                  <%end%>
                <!--< end %>-->
                <%= link_to codigo_colores_path, class: "btn btn-danger btn-sm" do %>
                  <span class="icon text-red-50">
                    <i class="fas fa-arrow-circle-left"></i>
                  </span>
                  <span class="text">CANCELAR</span>
                <%end%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>