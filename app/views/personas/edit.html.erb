<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Perfil de Usuario</h6>
  </div>

  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <%= simple_form_for(@persona) do |f| %>
            <div class="row">
              <div class="col-md-5">
                <div class="card">
                  <div class="card-body">
                    <div class="container-fluid">
                      <div class="d-flex flex-column align-items-center text-center">
                        <!--<img src="<= @persona.foto.url%>" alt="Admin" class="rounded-circle" width="150" height="150">-->
                        <img src="https://avatars.githubusercontent.com/u/97012106?v=4" alt="Admin" class="rounded-circle" width="150" height="150">
                        <!--<img src="<= @persona.foto.url%>" alt="Admin" class="rounded-circle" width="240" height="240">-->
                        <br><br>
                        <div class="forms-group">
                          <!--<= f.file_field :foto, class: "col-md-12 form-control"%>-->
                          <%= f.input_field :foto, as: :file, class: "col-md-12 form-control" %>
                          <% if @persona.errors[:imagen].any?%>
                            <p class="bg-danger"><%= @persona.errors[:foto].to_s[/\w([^"]*)/]%> </p>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <br>
              </div>

              <div class="col-md-7">
                <div class="card">
                  <div class="card-body">
                    <div class="container-fluid">
                      <!--<= f.hidden_field :user_updated_id, :value => current_user.id %>-->
                      <div class="row">
                        <div class="col-md-6"><%= f.input :nombre, autofocus: true,class:"form-control", required: true, pattern: "^[A-Za-zñÑáéíóúÁÉÍÓÚ \s]+$" %></div>
                        <div class="col-md-6"><%= f.input :apellido, class:"form-control", required: true, pattern: "^[A-Za-zñÑáéíóúÁÉÍÓÚ \s]+$" %></div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                          <%= f.input :telefono, class:"form-control", required: true, pattern: "^[0-9]{8}$"%>
                        </div>
                        <div class="col-md-6"></div>
                      </div>
                      <%= f.input :direccion, class: "form-control", required: true %>
                    </div>
                  </div>
                </div>
                <br>
                <div class="text-center">
                  <%= button_tag f.submit, class: "btn btn-success btn-sm", data: {controller: 'sweetalert', action: 'click->sweetalert#btnConfirmar',
                                                                                    sweetalert_confirm_alert_value: "Registrar",
                                                                                    sweetalert_cancel_alert_value: "Cancelado",
                                                                                    sweetalert_confirm_title_value: 'Esta seguro de <strong> registrar el usuario?</strong>',
                                                                                    sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, Registrar</strong>',
                                                                                    sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                    sweetalert_cancel_title_value: 'Se ha cancelado el evento <strong>registrar usuario</strong>' } do %>
                    <span class="icon text-50">
                      <i class="fas fa-edit"></i>
                    </span>
                    <span class="text">ACTUALIZAR</span>
                  <% end %>

                  <%= link_to ver_perfil_path(@persona), class: "btn btn-danger btn-sm" do %>
                    <span class="icon text-red-50">
                      <i class="fas fa-arrow-circle-left"></i>
                    </span>
                    <span class="text">CANCELAR</span>
                  <%end%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>