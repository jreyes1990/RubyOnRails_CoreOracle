<!-- Inicio Áreas - Empresas -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión de Áreas - Empresas</h6>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-12 table-responsive-sm text-right">
        <!--< if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>-->
          <%= link_to new_area_path, class: "btn btn-success btn-sm" do %>
            <span class="icon text-green-50">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">AGREGAR</span>
          <% end %>
        <!--< end %>-->
        <%= link_to root_path, class: "btn btn-danger btn-sm" do %>
          <span class="icon text-red-50">
              <i class="fas fa-home"></i>
          </span>
          <span class="text">INICIO</span>
        <% end %>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-12 table-responsive-sm">
        <table id="datatable_area_ajax" class="table table-striped table-hover table-sm table-bordered display" cellspacing="0" style="width:100%" data-source="<%= areas_path(format: :json) %>">
          <thead class="text-white">
            <tr>
              <th class="text-center">ID</th>
              <th>Empresa</th>
              <th class="text-center">
                <div>Codigo Área</div>
                <div></div>
              </th>
              <th>
                <div>Nombre</div>
                <div></div>
              </th>
              <th class="text-center">HEX</th>
              <th>Descripcion</th>
              <th class="text-center">Estado</th>
              <!--< if tiene_permiso("BOTON EDITAR REGISTRO", "VER") ||
              tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>-->
              <th class="text-center"></th>
              <!--< end %>-->
              <!--< if tiene_permiso("BOTON ACTIVAR/INACTIVAR REGISTRO", "VER") %>-->
              <th class="text-center"></th>
              <!--< end %>-->
            </tr>
          </thead>
          <tbody>
            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
