<!-- Inicio Usuario - Área -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión de Usuario-Área</h6>
  </div>
  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <%= simple_form_for(@personas_area) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <div class="row">
                <div class="col-md-6">
                  <div class="field">
                    <%= f.label :empresa %>
                    <%= collection_select(:empresa, :empresa_id, Empresa.where(:estado => 'A').order(:nombre).limit(10), :id, :nombre,  {:prompt => "Seleccione una Empresa"}, {:class => "form-control select2", :required => '', id: "codigo_empresa_persona", 'data-endpoint': search_empresa_persona_path}) %>
                  </div>
                  <br>
                </div>
                <div class="col-md-6">
                  <% if titulo_personas_area.upcase == 'ACTUALIZAR'%>
                    <%= f.association :area, collection: Area.where(estado: 'A').limit(5), value_method: :id, label_method: :area_con_codigo,  label: "Área", include_blank: "Seleccione un Área", input_html: { class: "select2", id: 'codigo_area_persona', required: true } %>
                  <% else %>
                    <%= f.association :area, collection: Area.where(estado: 'A').limit(0), value_method: :id, label_method: :area_con_codigo,  label: "Área", include_blank: "Seleccione un Área", input_html: { class: "select2", id: 'codigo_area_persona', required: true } %>
                  <% end %>
                </div>
              </div>
              <%= f.association :persona, collection: Persona.where(estado: 'A'), value_method: :id, label_method: :nombre_completo_con_email,  label: "Usuario", include_blank: "Seleccione un Usuario", input_html: { class: "select2", id: 'usuario_id', required: true } %>
              <%= f.input :descripcion, as: :text, input_html: {rows: 3} %>
            </div>
            <br>

            <div class="row">
              <div class="col-md-12 text-center">
                <!--< if tiene_permiso("BOTON REGISTRAR", "VER") %>-->
                  <%= button_tag f.submit, class: "btn btn-success btn-sm", data: {controller: 'sweetalert', action: 'click->sweetalert#btnConfirmar',
                                                                                    sweetalert_confirm_alert_value: "#{titulo_personas_area}",
                                                                                    sweetalert_cancel_alert_value: "Cancelado",
                                                                                    sweetalert_confirm_title_value: 'Esta seguro de <strong>'+"#{titulo_personas_area.upcase} #{@personas_area.id}?"+'</strong>',
                                                                                    sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, '+"#{titulo_personas_area}"+'</strong>',
                                                                                    sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                    sweetalert_cancel_title_value: 'Se ha cancelado el evento <strong>'+"#{titulo_personas_area.upcase} #{@personas_area.id}"+'</strong>' } do %>
                    <span class="icon text-green-50">
                      <i class="fas fa-edit"></i>
                    </span>
                    <span class="text"><%= titulo_personas_area.upcase %></span>
                  <%end%>
                <!--< end %>-->
                <%= link_to personas_areas_path, class: "btn btn-danger btn-sm" do %>
                  <span class="icon text-red-50">
                    <i class="fas fa-arrow-circle-left"></i>
                  </span>
                  <span class="text">CANCELAR</span>
                <%end%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="area_persona" data-endpoint="<%= search_area_persona_path %>"></div>