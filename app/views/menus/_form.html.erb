<!-- Inicio Menú -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión de Menú</h6>
  </div>
  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <%= simple_form_for(@menu) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <div class="row">
                <div class="col-md-3">
                  <%= f.input :icono, collection: FontAwesom.where(estado: 'A'), value_method: :icono, label_method: :icono,  label: "Icono", include_blank: "Seleccione un icono", input_html: { class: "select2", id: 'font_awesom_id', required: true, type: "icon"} %>
                </div>
                <div class="col-md-6">
                  <%= f.input :nombre %>
                </div>
                <div class="col-md-3">
                  <%= f.input :codigo_hex, input_html: { type: "color" } %>
                </div>
              </div>
              <%= f.input :descripcion, as: :text, input_html: {rows: 3} %>
            </div>
            <br>

            <div class="row">
              <div class="col-md-12 text-center">
                <!--< if tiene_permiso("BOTON REGISTRAR", "VER") %>-->
                  <%= button_tag f.submit, class: "btn btn-success btn-sm", data: {controller: 'sweetalert', action: 'click->sweetalert#btnConfirmar',
                                                                                    sweetalert_confirm_alert_value: "#{titulo_menu}",
                                                                                    sweetalert_cancel_alert_value: "Cancelado",
                                                                                    sweetalert_confirm_title_value: 'Esta seguro de <strong>'+"#{titulo_menu.upcase} #{@menu.nombre}?"+'</strong>',
                                                                                    sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, '+"#{titulo_menu}"+'</strong>',
                                                                                    sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                    sweetalert_cancel_title_value: 'Se ha cancelado el evento <strong>'+"#{titulo_menu.upcase} #{@menu.nombre}"+'</strong>' } do %>
                    <span class="icon text-green-50">
                      <i class="fas fa-edit"></i>
                    </span>
                    <span class="text"><%= titulo_menu.upcase %></span>
                  <%end%>
                <!--< end %>-->
                <%= link_to menus_path, class: "btn btn-danger btn-sm" do %>
                  <span class="icon text-red-50">
                    <i class="fas fa-arrow-circle-left"></i>
                  </span>
                  <span class="text">CANCELAR</span>
                <%end%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
